<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grass"
    android:padding="0dp"
    >

    <ImageView
        android:id="@+id/img_tutorial"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/tutorial"
        android:padding="0dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- header with message and score-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:gravity="top"
        >

        <TextView
            android:id="@+id/lab_hello"
            android:text="Hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="top|center"
            android:layout_marginTop="20dp"
            style="@style/AppTheme.TextAppearance.Menu_info"
            />
        <TextView
            android:id="@+id/lab_score"
            android:text="9999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            style="@style/AppTheme.TextAppearance.Menu_score"
            />

    </LinearLayout>

    <!-- buttons bar -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        >


        <Button
            android:id="@+id/btn_start_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_game"
            style="@style/AppTheme.TextAppearance.Menu_button"
            android:onClick="on_btn_start_game_click"
            />

        <Button
            android:id="@+id/btn_sign_in"
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.TextAppearance.Menu_button"
            />
        <!--android:onClick="onSignInButtonClicked"-->


        <Button
            android:id="@+id/btn_show_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_show_leaderboard"
            style="@style/AppTheme.TextAppearance.Menu_button"
            android:onClick="onShowLeaderboardsRequested"
            />

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            style="@style/AppTheme.TextAppearance.Menu_button"
            android:onClick="onSignOutButtonClicked"
            />
    </LinearLayout>


</LinearLayout>

</LinearLayout>